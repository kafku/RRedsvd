#include Makevars.common
REDDIR=redsvd-0.2.0
REDSRCDIR=$(REDDIR)/src
EIGENSRCDIR=.

RCPPPATH=`Rscript -e "Rcpp:::CxxFlags()"`
RCPPEIGENPATH=`Rscript -e "Rcpp:::CxxFlags()" |sed 's/Rcpp/RcppEigen/'`

PKG_CXXFLAGS +=-I.
PKG_CXXFLAGS +=-I$(REDSRCDIR)
PKG_CXXFLAGS +=$(RCPPPATH)
PKG_CXXFLAGS +=$(RCPPEIGENPATH)

PKG_LIBS += -lz
PKG_LIBS +=-L.
PKG_LIBS += -lredsvd
PKG_LIBS += `Rscript -e "Rcpp:::LdFlags()"`

PROG=redsvdwrap.so

#ifeq "$(UNAME_S)" "Darwin"
ifeq "$(R_ARCH)" "/x86_64"
ARCHOPT=-arch $(R_ARCH:/%=%)
endif

ifeq "$(R_ARCH)" "/i386"
ARCHOPT=-arch $(R_ARCH:/%=%)
endif

all:$(PROG)

util.o:
	@echo $(R_ARCH)	
	g++ $(ARCHOPT) $(REDSRCDIR)/util.cpp -I$(EIGENSRCDIR) -I$(REDSRCDIR) -fPIC -c

libredsvd.a:util.o
	ar r $@ util.o	

$(PROG):redsvdwrap.cpp libredsvd.a
	@echo	$(R_PACKAGE_DIR)
	@echo	lib$(R_ARCH)

clean:
	rm *.o *.a
